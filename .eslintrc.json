{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-alert": "error",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": "error"
  },
  "globals": {
    "Chart": "readonly",
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "sessionStorage": "readonly",
    "fetch": "readonly",
    "console": "readonly",
    "debugLogger": "readonly"
  }
}