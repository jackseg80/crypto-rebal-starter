# Configuration template for crypto-rebal-starter
# Copy this file to .env and fill in your values

# Environment settings
DEBUG=false
ENVIRONMENT=production
RISK_SCORE_V2_ENABLED=true

# API Keys (leave empty and fill with your values)
COINGECKO_API_KEY=
FRED_API_KEY=
CT_API_KEY=
CT_API_SECRET=

# Debug token (leave empty in production)
DEBUG_TOKEN=

# Data source settings
ALLOW_STUB_SOURCES=false
COMPUTE_ON_STUB_SOURCES=false

# Server settings
PORT=8000
HOST=127.0.0.1

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# CORS settings (development only)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000